# Logrotate file for chia-monitor.service

/var/log/chia-monitor.log {
    compress
    notifempty
    daily
    rotate 3
    create 0600 root root
    minsize 1M
    postrotate
        /usr/bin/systemctl restart chia-monitor.service > /dev/null 2>&1
	/usr/bin/systemctl restart rsyslog.service > /dev/null 2>&1
    endscript
}
